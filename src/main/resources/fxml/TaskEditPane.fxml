<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="287.0" prefWidth="471.0" spacing="20.0" stylesheets="@/css/ProjectEditPane.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.gastronomiastosowana.presenter.TaskEditPanePresenter">
   <children>
      <Label fx:id="dialogTypeLabel" maxWidth="1.7976931348623157E308" text="Create new task">
         <font>
            <Font size="17.0" />
         </font>
      </Label>
      <GridPane hgap="5.0" vgap="5.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="218.0" minWidth="10.0" prefWidth="129.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="319.0" minWidth="10.0" prefWidth="319.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label maxWidth="1.7976931348623157E308" text="Task title:"  GridPane.rowIndex="1"/>
            <Label maxWidth="1.7976931348623157E308" text="Task details:" GridPane.rowIndex="2" />
            <Label maxWidth="1.7976931348623157E308" text="Deadline:" GridPane.rowIndex="3" />
            <TextField fx:id="taskTitleInput" maxWidth="17.976931348623157E308" GridPane.columnIndex="2"  GridPane.rowIndex="1"/>
             <TextField fx:id="taskDetailsInput" maxWidth="17.976931348623157E308" GridPane.columnIndex="2"  GridPane.rowIndex="2"/>
            <HBox maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="3">
               <children>
                  <DatePicker fx:id="deadlineInput" maxWidth="17.976931348623157E308" prefHeight="28.0" prefWidth="270.0" />
                  <Button mnemonicParsing="false" onAction="#clearDeadlineInput" prefHeight="28.0" prefWidth="28.0" styleClass="close-button" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </GridPane>
      <HBox alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="431.0" spacing="10.0">
         <children>
            <Label fx:id="errorLabel" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" textFill="RED" HBox.hgrow="ALWAYS" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#accept" prefWidth="80.0" text="OK" />
            <Button cancelButton="true" mnemonicParsing="false" onAction="#reject" prefWidth="80.0" text="Cancel" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
